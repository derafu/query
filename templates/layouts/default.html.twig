{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Query - Expressive Path-Based Query Builder for PHP{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-2 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                              <div class="fw-bold">Package Info</div>
                              <span class="smal text-muted">derafu/query</span>
                            </div>
                        </li>
                        <a href="/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="/query-config" class="list-group-item list-group-item-action {% if request.uri.path == '/query-config' %}active{% endif %}">
                            Declarative Query Configuration
                        </a>
                        <a href="/security-guide_en" class="list-group-item list-group-item-action {% if request.uri.path == '/security-guide_en' %}active{% endif %}">
                            Security Guide
                        </a>
                        <a href="/security-guide_es" class="list-group-item list-group-item-action {% if request.uri.path == '/security-guide_es' %}active{% endif %}">
                            Gu√≠a de Seguridad
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
{% endblock %}
